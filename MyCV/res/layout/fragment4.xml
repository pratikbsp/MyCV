<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d3d3b"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Projects"
        android:textColor="#ffffff"
        android:textSize="18sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/projectDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/line12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/verticalLine12"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginStart="4.5dp"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/X"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/verticalLine22"
                android:layout_width="1dp"
                android:layout_height="39dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginStart="4.5dp"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/X"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/verticalLine32"
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginStart="4.5dp"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/coloumn12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Built an android app WriteNote to write notes, memos, messages, shopping lists."
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Built a Java swing app for estimating the effect of water used in Underground Mines from
different sources.\nThis app computes amount of water used in UG mines and its effects in water table."
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/acadmicsA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projects"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Open-Source Experince"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acadmicsA"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/line123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/verticalLine123"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginStart="4.5dp"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/imageView123"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/X"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/verticalLine223"
                android:layout_width="1dp"
                android:layout_height="122dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginStart="4.5dp"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/imageView223"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/X"
                android:src="@drawable/circle" />

            <TextView
                android:id="@+id/verticalLine323"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginStart="4.5dp"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/coloumn123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/r13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Open source contribution to Wikimedia Foundation:-"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/r23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Visual Editor:-Contributed by adding multiple row deletion feature in visual editor table."
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/r3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Improved user notification system in Wikimedia engine.
"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/r4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Open source contribution to LanguageTool."
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/r5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Contributed by providing support for Hindi language (Still in process)."
                    android:textColor="#ffffff" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>